<body>

	<!-- Header -->

	<% include header %>


		<!--====== Forgot Password Page ======-->

		<section class="contact section-padding">
			<div class="container">

				<div class="section-head spac">
					<h3>Forgot Password</h3>
				</div>

				<div class="wrapper">
					<div id="formContent">
						<!-- Tabs Titles -->

						<% if (message.length> 0 && success) { %>
							<div class="alert alert-success col-sm-12">
								<%= message %>
							</div>
							<% } else if(message.length> 0) {%>
								<div class="alert alert-danger col-sm-12">
									<%= message %>
								</div>
								<% } %>

									<!-- Forgot Form -->
									<form class="mb-10" method="POST" action="/forgotPassword">
										<input type="email" id="forgot" class="second" name="emailId"
											placeholder="Email Address" required>
										<input type="submit" class="fourth" value="Send">
									</form>
									<a class="forgot-password" href="/login">Back to login</a>

					</div>
				</div>

			</div>
		</section>
		<!--====== End Forgot Password Page ======-->


		<!-- footer -->

		<% include footer %>

			<!-- End Footer -->

</body>

