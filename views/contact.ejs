<body>

	<!-- Header -->

	<% include header %>

		<!-- End Header -->

		<!--====== Contact ======-->
		<section class="contact section-padding">
			<div class="container">

				<img class="mt-80 mb-40" src="https://sochglobal.com/uploads/<%=contact%>">

				<div class="row mb-35">
					<div class="col-md-7">
						<% if (message==="false" ) { %>
							<div class="alert alert-danger col-sm-12">
								There is an Error. Please contact Admin.
							</div>
							<% } else if (message.length>0) { %>
								<div class="alert alert-success col-sm-12">
									<%= message %>
								</div>
								<% } else { %>

									<form class="form" method="post" action="/contact" id="contactUs" onsubmit = "return validateFirstName()">
										<div class="controls">

											<div class="row">

												<div class="col-md-12">
													<div class="form-group">
														<label for="email">Email<span class="requiredFields">*</span></label>
														<input type="email" name="email" placeholder="abc@gmail.com" required>
													</div>
												</div>

											</div>

											<div class="row">

												<div class="col-md-6">
													<div class="form-group">
														<label for="firstName">First Name<span class="requiredFields">*</span></label>
														<input type="text" name="firstName" placeholder="First Name" required>
													</div>
												</div>

												<div class="col-md-6">
													<div class="form-group">
														<label for="lastName">Last Name</label>
														<input type="text" name="lastName" placeholder="Last Name">
													</div>
												</div>

											</div>

											<div class="row">

												<div class="col-md-6">
													<div class="form-group">
														<label for="countryRegion">Country/Region<span class="requiredFields">*</span></label>
														<input type="text" name="countryRegion" placeholder="Ex - USA" required>
													</div>
												</div>

												<div class="col-md-6">
													<div class="form-group">
														<label for="phoneNumber">Phone number (Please start with country code)<span
																class="requiredFields">*</span></label>
														<input type="tel" name="phoneNumber" placeholder="Ex - +1 1234567890" required>
													</div>
												</div>

											</div>

											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="companyName">Company name<span class="requiredFields">*</span></label>
														<input type="text" name="companyName" placeholder="Company name" required>
													</div>
												</div>
											</div>

											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="message">Message<span class="requiredFields">*</span></label>
														<textarea name="message" placeholder="How may i help you?" rows="4" required></textarea>
													</div>
												</div>
											</div>

											<div class="row">
												<div class="col-md-12">
													<div class="form-group">
														<label for="websiteUrl">Your Website Url (Optional)</label>
														<input type="text" name="websiteUrl" placeholder="www.abc.com">
													</div>
												</div>
											</div>

											<div id="divRecaptcha" class="g-recaptcha">
											</div>
											<input id="tokenOutput" type="text" name="token" required>
											<br>

											<div class="row">
												<div class="col-sm-offset-3 col-sm-6">
													<input type="submit" value="Send message">
												</div>
											</div>

										</div>
									</form>

									<% } %>

					</div>
					<div class="col-md-5">
						<div class="info">
							<h5>About Soch Global.</h5>

							<div class="item">
								<span class="icon icon-phone"></span>
								<h6 class="sm-titl">Phone :<br> <span>+1 (516) 248-8777</span></h6>
							</div>
							<div class="item">
								<span class="icon icon-map-pin"></span>
								<h6 class="sm-titl">Address :<br> <span>211 Denton Avenue, New Hyde Park,<br>
										New York
										11040</span>
								</h6>
							</div>
							<!-- <div class="item">
										<span class="icon icon-envelope"></span>
										<h6 class="sm-titl">Email :<br> <span>info@sochglobal.com</span></h6>
									</div> -->
							<!-- social Icon -->
							<div class="social-icon">
								<a target="_blank" href="https://twitter.com/SochGlobal_Inc">
									<span class="bg-twitter"><i class="fab fa-twitter" aria-hidden="true"></i></span>
								</a>
								<a target="_blank" href="https://www.instagram.com/sochglobal_inc/">
									<span class="bg-instagram"><i class="fab fa-instagram" aria-hidden="true"></i></span>
								</a>
							</div>

						</div>
					</div>
				</div>
			</div>
		</section>
		<!--====== End Contact ======-->

		<!--====== Map ======-->
		<div class="map">
			<iframe class="address-map"
				src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3022.7549151980243!2d-73.6720016!3d40.7454181!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c262a15ec45ff3%3A0x572e66c7f1ddac11!2s211%20Denton%20Ave%2C%20New%20Hyde%20Park%2C%20NY%2011040%2C%20USA!5e0!3m2!1sen!2sin!4v1614382463968!5m2!1sen!2sin"
				width="600" height="600" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
		</div>
		<!--====== End Map ======-->

		<!-- footer -->

		<% include footer %>

			<!-- End Footer -->

</body>

