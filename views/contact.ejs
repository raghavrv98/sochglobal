	<!--[endif]-->

	<script defer>
		if ( window.history.replaceState ) {
        window.history.replaceState( null, null, window.location.href );
    }
		
		function successCallback(token) {
			console.log('token: ', token);
			document.getElementById("tokenOutput").value = token;
		}
	</script>

	<script defer>

		function validateFirstName() {
			var x = document.forms["contactUs"]["token"].value;
			console.log('x: ', x);
			if (x == null || x == "") {
				alert("Please Fill the captcha code");
				return false;
			}
			else {
				return true;
			}
		}

		function onloadCallback() {
			grecaptcha.render('divRecaptcha', {
				sitekey: '6LfnsLYkAAAAAAkCA3MIDTdcUHYu4mQQmxbsRuzX',
				callback: successCallback
			});
		}
	</script>

	<!-- recpatcha js file -->
	<script defer src="https://google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async></script>

